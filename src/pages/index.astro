---
import location from "@/assets/icons/location.svg?raw";
import SimpleContactMeSection from "@/components/contact/simple-contact-me-section.astro";
import PersonalIntro from "@/components/personal-info/personal-intro.astro";
import ServicesList from "@/components/personal-info/services-list.astro";
import WorkList from "@/components/personal-info/work-list.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";
import MainLayout from "../layouts/main-layout.astro";

const workList = [
  {
    title: "Webflow",
    yearStart: "2022",
    yearEnd: "Present",
    img: {
      src: "https://picsum.photos/200/300",
      alt: "Webflow",
    },
  },
  {
    title: "Shopify",
    yearStart: "2021",
    yearEnd: "2022",
    img: {
      src: "https://picsum.photos/200/300",
      alt: "Shopify",
    },
  },
  {
    title: "Shopify",
    yearStart: "2021",
    yearEnd: "2022",
    img: {
      src: "https://picsum.photos/200/300",
      alt: "Shopify",
    },
  },
  {
    title: "Shopify",
    yearStart: "2021",
    yearEnd: "2022",
    img: {
      src: "https://picsum.photos/200/300",
      alt: "Shopify",
    },
  },
];

const servicesList = [
  {
    title: "Webflow",
    description: "from $100 per hour",
    icon: location,
  },
  {
    title: "Shopify",
    description: "from $100 per hour",
    icon: location,
  },
  {
    title: "GitHub",
    description: "from $100 per hour",
    icon: location,
  },
];
---

<MainLayout title={SITE_TITLE} description={SITE_DESCRIPTION}>
  <main class="space-y-20">
    <PersonalIntro />

    <section class="space-y-8">
      <h2>Selected Work</h2>

      <WorkList list={workList} />
    </section>

    <section class="space-y-8">
      <h2>Selected Services</h2>

      <ServicesList list={servicesList} />
    </section>

    <SimpleContactMeSection />
  </main>
</MainLayout>
